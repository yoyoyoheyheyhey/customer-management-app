<h1 class="text-3xl text-gray-700">アカウント設定</h1>

<%= flash[:notice] %>

<div class="bg-white py-8">
  <div class="flex flex-col justify-center bg-white border rounded shadow-md p-20">
    <div class="flex basis-1/6 flex-col items-center gap-x-4">
      <% if @admin.icon.attached? %>
        <%= image_tag @admin.icon.variant(resize: '200x200'), class: "rounded-full w-40 h-40" %>
      <% else %>
        <svg class="rounded-full w-40 h-40 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"><path fill-rule="evenodd" d="M18.685 19.097A9.723 9.723 0 0021.75 12c0-5.385-4.365-9.75-9.75-9.75S2.25 6.615 2.25 12a9.723 9.723 0 003.065 7.097A9.716 9.716 0 0012 21.75a9.716 9.716 0 006.685-2.653zm-12.54-1.285A7.486 7.486 0 0112 15a7.486 7.486 0 015.855 2.812A8.224 8.224 0 0112 20.25a8.224 8.224 0 01-5.855-2.438zM15.75 9a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z" clip-rule="evenodd" /></svg>
      <% end %>
      <%= link_to '画像を削除', destroy_icon_admin_path(@admin), data: { turbo_method: :delete, turbo_confirm: '本当に削除しますか？' }, class: "text-xs text-gray-500 hover:text-gray-600" %>
    </div>
    <div class="flex flex-col my-14">
      <div>
        <div class="flex flex-col bg-white">
          <div class="flex justify-center pb-6 space-x-10">
            <p class="text-end text-gray-500 w-2/12 py-5">
              名前
            </p>
            <p class="text-gray-500 border-b border-gray-300 w-3/12 py-5">
              <%= @admin.name %>
            </p>
          </div>
          <div class="flex justify-center py-6 space-x-10">
            <p class="text-end text-gray-500 w-2/12 py-5">
              メールアドレス
            </p>
            <p class="text-gray-500 border-b border-gray-300 w-3/12 py-5">
              <%= @admin.email %>
            </p>
          </div>
        </div> 
      </div>
    </div>
      <div class="flex justify-center space-x-1">
        <%= link_to "編集", edit_admin_registration_path, class: "py-1 px-3 inline-flex items-center gap-x-2 text-sm font-semibold rounded border border-transparent bg-yellow-900 text-white hover:bg-yellow-800 disabled:opacity-50 disabled:pointer-events-none" %>
        <% if current_admin.id === @admin %>
          <%= link_to "削除", admin_path(@admin), class: "py-1 px-3 inline-flex items-center gap-x-2 text-sm font-semibold rounded border border-transparent bg-red-900 text-white hover:bg-red-800 disabled:opacity-50 disabled:pointer-events-none" %>
        <% end %>
      </div>
      <div class="mt-8 flex justify-center">
        <%= link_to "戻る", admins_path, class: "text-gray-500 hover:text-gray-600" %>
      </div>
  </div>
</div>
