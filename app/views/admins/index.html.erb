<h1 class="text-red-500">管理者一覧</h1>

<%= flash[:notice] %>
<%= flash[:alert] %>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>名前</th>
      <th>メールアドレス</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @admins %>
      <% @admins.each do |admin| %>
        <tr>
          <td><%= admin.id %></td>
          <td class="text-red-500"><%= admin.name %></td>
          <td><%= admin.email %></td>
          <td><%= link_to '表示', admin %></td>
          <td><%= link_to '編集', edit_admin_path(admin) %></td>
          <td><%= link_to '削除', admin_path(admin), data: { turbo_method: :delete, turbo_confirm: '本当に削除しますか?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<%= link_to '新規作成', new_admin_path %>
