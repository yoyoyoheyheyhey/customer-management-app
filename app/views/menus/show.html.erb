<h1 class="text-3xl text-gray-700">メニュー詳細</h1>

<%= flash[:notice] %>

<div class="py-20">
  <div class="flex bg-white">
    <div class="mt-3">
      <div>
        <div class="flex flex-col bg-white">
          <div class="flex items-center pb-6">
            <p class="text-gray-500 w-60 py-5">
              メニュー名
            </p>
            <p class="text-gray-500 border-b border-gray-300 flex-1 w-96 py-5">
              <%= @menu.name %>
            </p>
          </div>
          <div class="flex items-center py-6">
            <p class="text-gray-500 w-60 py-5">
              価格
            </p>
            <p class="text-gray-500 border-b border-gray-300 flex-1 w-96 py-5">
              <%= @menu.price %>
            </p>
          </div>
        </div> 
      </div>
      <div class="mt-3 space-x-1 py-32">
        <%= link_to "編集", edit_menu_path(@menu), class: "py-1 px-3 inline-flex items-center gap-x-2 text-sm font-semibold rounded border border-transparent bg-yellow-900 text-white hover:bg-yellow-800 disabled:opacity-50 disabled:pointer-events-none" %>
        <%= link_to "削除", menu_path(@menu), data: { turbo_method: :delete, turbo_confirm: '本当に削除しますか?' }, class: "py-1 px-3 inline-flex items-center gap-x-2 text-sm font-semibold rounded border border-transparent bg-red-900 text-white hover:bg-red-800 disabled:opacity-50 disabled:pointer-events-none" %>
        <%= link_to "戻る", menus_path, class: "py-1 px-3 inline-flex items-center gap-x-2 text-sm font-semibold rounded border border-transparent bg-gray-900 text-white hover:bg-gray-700 disabled:opacity-50 disabled:pointer-events-none" %>
      </div>
    </div>
  </div>
</div>
