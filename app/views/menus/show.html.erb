<h1 class="text-3xl text-gray-700">メニュー詳細</h1>

<%= flash[:notice] %>

<div class="py-8">
  <div class="flex flex-col border rounded shadow-md py-20">
    <div class="flex justify-center">
      <div class="flex flex-col w-11/12">
        <div class="flex justify-center pb-6 space-x-10">
          <p class="text-end text-gray-700 w-1/12 py-5">
            メニュー名
          </p>
          <p class="text-center text-gray-700 border-b border-gray-300 w-3/12 py-5">
            <%= @menu.name %>
          </p>
        </div>
        <div class="flex justify-center pb-6 space-x-10">
          <p class="text-end text-gray-700 w-1/12 py-5">
            価格
          </p>
          <p class="text-center text-gray-700 border-b border-gray-300 w-3/12 py-5">
            <%= @menu.price %>
          </p>
        </div>
      </div> 
    </div>
    <div class="flex justify-center mt-16 space-x-2">
      <%= link_to "編集", edit_menu_path(@menu), class: "py-1 px-3 inline-flex items-center gap-x-2 text-sm font-semibold rounded bg-yellow-900 text-white hover:bg-yellow-800" %>
      <%= link_to "削除", menu_path(@menu), data: { turbo_method: :delete, turbo_confirm: '本当に削除しますか?' }, class: "py-1 px-3 inline-flex items-center gap-x-2 text-sm font-semibold rounded bg-red-900 text-white hover:bg-red-800" %>
    </div>
    <div class="flex justify-center mt-8">
      <%= link_to "戻る", menus_path, class: "text-gray-700 hover:text-gray-500" %>
    </div>
  </div>
</div>
