<h1 class="text-3xl text-gray-700">メニュー登録</h1>

<%= flash[:alert] %>

<% if @menu.errors.any? %>
  <ul>
    <% @menu.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= render 'form', menu: @menu %>

<%= link_to(menus_path) do %>
  <div class="w-full flex items-center gap-x-3.5 py-2 px-2.5 text-gray-500 rounded-lg hover:text-gray-600 focus:outline-none focus:ring-1 focus:ring-gray-600">
    <p>戻る</p>
  </div>
<% end %>

