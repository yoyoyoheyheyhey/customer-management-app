<h1>メニュー一覧</h1>

<%= flash[:notice] %>
<%= flash[:alert] %>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>メニュー名</th>
      <th>価格</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @menus %>
      <% @menus.each do |menu| %>
        <tr>
          <td><%= menu.id %></td>
          <td><%= menu.name %></td>
          <td><%= menu.price %></td>
          <td><%= link_to '表示', menu %></td>
          <td><%= link_to '編集', edit_menu_path(menu) %></td>
          <td><%= link_to '削除', menu_path(menu), data: { turbo_method: :delete, turbo_confirm: '本当に削除しますか?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<%= link_to '新規作成', new_menu_path %>
