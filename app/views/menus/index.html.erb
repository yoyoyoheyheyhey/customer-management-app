<h1>メニュー一覧</h1>

<%= flash[:notice] %>
<%= flash[:alert] %>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>メニュー名</th>
      <th>価格</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @menus %>
      <% @menus.each do |menu| %>
        <tr>
          <td><%= link_to menu.id, menu_path(menu) %></td>
          <td><%= link_to menu.name, menu_path(menu) %></td>
          <td><%= link_to menu.price, menu_path(menu) %>円</td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<%= link_to 'メニュー登録', new_menu_path %>
