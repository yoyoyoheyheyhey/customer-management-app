
<div class="bg-white pt-10 flex">
  <%= form_with(model: menu, local: true) do |f| %>
    <div class="pb-8">
      <div class="flex justify-between">
        <%= f.label "メニュー名", class: "block text-sm font-medium mb-2" %>
      </div>
      <%= f.text_field :name, class: "py-3 pl-4 pr-20 border block w-full border-gray-300 rounded text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none", :placeholder => "カット"  %>
    </div>
    <div class="pb-8">
      <div class="flex justify-between items-center">
        <%= f.label "価格", class: "block text-sm font-medium mb-2" %>
      </div>
      <div class="relative">
        <div class="absolute inset-y-0 start-0 flex items-center pointer-events-none z-20 ps-4">
          <span class="text-gray-500">¥</span>
        </div>
        <%= f.number_field :price, class: "py-3 px-4 ps-9 pe-16 border block w-full border-gray-300 rounded text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none", :placeholder => "99999"  %>
      </div>
    </div>

    <div class="py-8">
      <%= f.submit "登録", class: "block py-1 px-3 inline-flex items-center gap-x-2 text-sm font-semibold rounded border border-transparent bg-gray-900 text-white hover:bg-gray-700 disabled:opacity-50 disabled:pointer-events-none" %>
    </div>
  <% end %>
</div>