<h1 class="text-3xl text-gray-700">来店履歴の編集</h1>

<%= flash[:alert] %>

<% if @customer_visit_history.errors.any? %>
  <ul>
    <% @customer_visit_history.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= render 'form', customer_visit_history: @customer_visit_history %>

<%= link_to(customer_path(@customer)) do %>
  <div class="w-full flex items-center gap-x-3.5 px-10 pb-10 text-gray-500 rounded-lg hover:text-gray-600 focus:outline-none focus:ring-1 focus:ring-gray-600">
    <p>キャンセル</p>
  </div>
<% end %>