
<div class="py-8">
  <div class="flex justify-center bg-white border rounded shadow-md p-10">
    <div class="bg-white py-8 w-3/12 items-center">
      <%= form_with(model: customer, local: true) do |f| %>

        <div class="flex flex-col pb-8">
          <%= f.label "顧客名", class: "block text-sm font-medium mb-2" %>
          <%= f.text_field :name, class: "py-3 pl-4 pr-20 border block w-full border-gray-300 rounded text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none", :placeholder => "顧客名"  %>
        </div>

        <div class="flex flex-col pb-8">
          <%= f.label "電話番号", class: "block text-sm font-medium mb-2" %>
          <%= f.text_field :phone_number, class: "py-3 pl-4 pr-20 border block w-full border-gray-300 rounded text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none", :placeholder => "08012345678"  %>
        </div>

        <div class="flex flex-col pb-8">
          <%= f.label "備考", class: "block text-sm font-medium mb-2" %>
          <%= f.text_area :remarks, class: "py-3 pl-4 border block w-full border-gray-300 rounded text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none", :placeholder => "スパイラルパーをよく注文する"  %>
        </div>

        <div class="flex justify-center py-8">
          <% if params[:action] == 'edit' %>
            <%= f.submit class: "block py-1 px-3 inline-flex items-center gap-x-2 text-sm font-semibold rounded border border-transparent bg-yellow-900 text-white hover:bg-yellow-700 cursor-pointer" %>
          <% else %>
            <%= f.submit class: "block py-1 px-3 inline-flex items-center gap-x-2 text-sm font-semibold rounded border border-transparent bg-gray-900 text-white hover:bg-gray-700 cursor-pointer" %>
          <% end %>
        </div>
      <% end %>

      <div class="flex justify-center items-center">
        <% if params[:action] == 'edit' %>
          <%= link_to "キャンセル", customer_path(@customer), class: "inline-block text-gray-700 hover:text-gray-500" %>
        <% else %>
          <%= link_to "戻る", customers_path, class: "inline-block text-gray-700 hover:text-gray-500" %>
        <% end %>
      </div>
    </div>
  </div>
</div>