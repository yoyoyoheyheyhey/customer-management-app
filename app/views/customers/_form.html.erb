<!-- app/views/users/_form.html.erb -->
<%= form_with(model: customer, local: true) do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :phone_number %>
    <%= form.text_field :phone_number %>
  </div>

  <div class="field">
    <%= form.label :remarks %>
    <%= form.text_area :remarks %>
  </div>

  <div class="field">
    <%= form.label :avatar %>
    <%= form.file_field :avatar %>
    <div>
      <% if @customer.avatar.attached? %>
        <%= image_tag @customer.avatar.variant(resize: '200x200') %>
      <% else %>
        <p>No image attached</p>
      <% end %>
    </div>
  </div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
